<Page x:Class="GuitarDesktopApp.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuitarDesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="Beige">
        <Label x:Name="UI_Home_Lbl" Content="Main Menu" Margin="0,0,0,0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="UI_Chord_Btn" Content="Learn Chords" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" FontSize="24" Width="200" Click="UI_Chord_Btn_Click"/>
        <Button x:Name="UI_Scales_Btn" Content="Learn Scales" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" FontSize="24" Width="200" Click="UI_Scales_Btn_Click"/>
        <Button x:Name="UI_Connect_Btn" Content="Connect to Device" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="48" Width="200" Click="UI_Connect_Btn_Click"/>

    </Grid>
</Page>
