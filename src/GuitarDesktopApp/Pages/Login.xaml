<Page x:Class="GuitarDesktopApp.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuitarDesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="Beige">
        <Label Content="Login" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100"/>
        <Label Content="Username: " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,250,0" />
        <TextBox Name="Username_Box" TextWrapping="Wrap" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Password:  " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,250,0" />
        <PasswordBox Name="Password_Box" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,241,0,0"/>
        
        <Button Content="Login" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,268,0,0"/>
        <Button Content="Add User" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,295,0,0"/>



    </Grid>
</Page>
