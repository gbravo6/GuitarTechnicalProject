<Page x:Class="GuitarDesktopApp.Chords"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuitarDesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chords">


    <Grid Background="Beige">
        <Label Name="UI_Chords_Lbl" Content="Chords" HorizontalAlignment="Center" FontSize="48" VerticalAlignment="Top" FontWeight="Bold" />
        <Button Name="UI_Home_Btn" Content="HOME" Width="50" Height="25" Click="UI_Home_Btn_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0" />
        <Button Name="UI_HowTo_Btn" Content="How to Read a Chord Diagram" Width="200" Height="50"  Click="UI_HowTo_Btn_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" />

        <Button Name="A_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="50,100,0,0" Click="A_btn_Click">
            <Image Source="/ChordImages/a-chord.jpg" Stretch="Fill" />
        </Button>
        <Button Name="Am_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="170,100,0,0" Background="White" Click="Am_btn_Clicked">
            <Image Source="/ChordImages/am-chord-diagram-823x1024.png" Stretch="Fill" />    
        </Button>
        <Button Name="C_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="290,100,0,0" Background="White" Click="C_btn_Click">
            <Image Source="/ChordImages/c-chord-diagram.png" Stretch="Fill" />
        </Button>
        <Button Name="D_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="410,100,0,0" Background="White" Click="D_btn_Click">
            <Image Source="/ChordImages/d-chord.png" Stretch="Fill" />
        </Button>
        <Button Name="Dm_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="530,100,0,0" Background="White" Click="Dm_btn_Click">
            <Image Source="/ChordImages/dm-chord.jpg" Stretch="Fill" />
        </Button>
        <Button Name="e_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="650,100,0,0" Background="White" Click="e_btn_Click">
            <Image Source="/ChordImages/e-chord.jpg" Stretch="Fill" />
        </Button>
        <Button Name="em_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="50,250,0,0" Background="White" Click="em_btn_click">
            <Image Source="/ChordImages/em-chord-diagram-823x1024.png" Stretch="Fill" />
        </Button>
        <Button Name="g_btn" Width="100" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left"
        Margin="170,250,0,0" Background="White" Click="g_btn_click">
            <Image Source="/ChordImages/g-chord-diagram.png" Stretch="Fill" />
        </Button>



    </Grid>
    
</Page>
