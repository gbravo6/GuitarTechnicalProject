<Page x:Class="GuitarDesktopApp.Pages.Scales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuitarDesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Scales">

    <Grid Background="Beige">
        <Label Name="UI_Scales_Lbl" Content="Scales" HorizontalAlignment="Center" FontSize="48" VerticalAlignment="Top" FontWeight="Bold" />
        <Button Name="UI_Home_Btn" Content="HOME" Width="50" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0" Click="UI_Home_Btn_Click" />
        <Button Name="UI_HowTo_Btn" Content="How to Read Guitar Tabs" Width="200" Height="50"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0" />
        <Button Name="em_pentatonic" Width="700" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Click="em_pentatonic_click">
            <Image Source="/Scale Images/em_pentatonic.png" Stretch="Fill"/>
        </Button>
        <Label x:Name="Em_penta_label" Content="Em Pentatonic Scale" Margin="45,75,636,350"/>


    </Grid>
</Page>
